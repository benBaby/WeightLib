<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="test"
            type="com.lib.rasmseyLib.TestBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.rasmsey.library.weight.CommonLayoutA
            android:id="@+id/cla_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:CLADividerColor="@android:color/holo_orange_light"
            app:CLALeftViewSrc="@drawable/icon_sss"
            app:CLARightText="SSSSS"
            app:CLARightEditTextValue="EEEEEEEEEEEEEEEEEEEE"
            app:CLARightTextColor="#333333"
            app:CLARightViewShow="false"
            app:CLAText="我的"
            app:CLATextColor="#333333"
            app:CLATextSize="14sp"
            app:CLARightEditTextViewShow="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{test.message}"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cla_a" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
